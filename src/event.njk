{% set page = "Template" %}
{% extends "base.njk" %}
{% block head_scripts %}
<script src="https://cloud.tinymce.com/stable/tinymce.min.js?apiKey=1xgvcz8vbo0d8ph1az3aqt4l0ygp01yy831faeohcg0n0rc5"></script>
<script>
    tinymce.init({
        selector: "#content",
        inline: true,
        browser_spellcheck: true,
        plugins: "code",
        theme: "modern",
        plugins: ["advlist autolink lists link image charmap print preview", "searchreplace visualblocks fullscreen textcolor colorpicker", "insertdatetime media table contextmenu paste imagetools"],
        toolbar: "insertfile undo redo | styleselect | bold italic | forecolor backcolor | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image | save",
    });
</script>
{% endblock %}
{% block main %}
<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <h2 class="primary-heading text-center">
                Rim of the Bay
            </h2>
            <p class="text-center">12/18/19 - 12/19/19 &bullet; Pinnacles National Park</p>
<!--            <p class="text-center"><a href="https://example.com">This event is now over! View photos on Google Photos</a></p>-->
            <button class="btn btn-block btn-primary">Sign up here!</button>
            <p class="text-muted text-center">Signups close <a>This Friday</a> (<a class="link">Check who's signed up</a>)</p>
<!--            <p class="text-muted text-center">Signups open <a class="link" data-toggle="tooltip" title="11/14/18 6:00 AM PST">This Friday</a></p>-->
            <hr>
            <h4>Description</h4>
            <div id="content">Rim of the bay is an annual hiking campout. Earn a patch!</div>
            <h4>Files</h4>
            <ul>
                <li><a class="link">Headcounts</a></li>
                <li><a class="link">Agenda</a></li>
                <li><a class="link">Cheat Sheet</a></li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}
